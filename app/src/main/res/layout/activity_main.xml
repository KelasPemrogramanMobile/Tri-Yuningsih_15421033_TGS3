<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="@android:color/holo_purple"
tools:context="yuni.tugastiga.MainActivity">


<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="17dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrasi"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="50dp"
        android:id="@+id/judul"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Nama"
        android:textSize="30dp"
        android:id="@+id/nama"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/judul"/>

    <EditText
        android:id="@+id/inputnama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_below="@id/nama"
        android:hint="Masukkan Nama Anda"
        android:inputType="textNoSuggestions"
        android:maxLines="1"
        android:textColor="@android:color/holo_blue_light"
        android:textColorHint="@android:color/holo_blue_light" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:text="Username"
        android:textSize="30dp"
        android:id="@+id/user"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/judul"/>

    <EditText
        android:id="@+id/inputuser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nama"
        android:hint="Masukkan Username Anda"
        android:inputType="textNoSuggestions"
        android:textStyle="bold"
        android:maxLines="1"
        android:textColor="@android:color/holo_blue_light"
        android:textColorHint="@android:color/holo_blue_light" />

    <TextView
        android:id="@+id/alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alamat"
        android:textSize="30dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/inputnama"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inputalamat"
        android:hint="Masukkan Alamat"
        android:textColorHint="@android:color/holo_blue_light"
        android:textColor="@android:color/holo_blue_light"
        android:inputType="textNoSuggestions"
        android:textStyle="bold"
        android:layout_below="@id/alamat"/>

    <TextView
        android:id="@+id/tgl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tanggal Lahir"
        android:textSize="30dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/inputalamat"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inputtgl"
        android:hint="Masukkan Tanggal Lahir"
        android:inputType="text"
        android:maxLines="1"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_light"
        android:textColorHint="@android:color/holo_blue_light"
        android:layout_below="@id/tgl"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jenis Kelamin"
        android:textColor="@android:color/black"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>

    <RadioGroup
        android:id="@+id/radiogrup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laki-laki"
            android:id="@+id/radiolaki"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perempuan"
            android:id="@+id/radioperempuan"/>
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agama"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginTop="10dp"/>

    <Spinner
        android:padding="10dp"
        android:id="@+id/inputspinner"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:entries="@array/agama"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="30dp"
        android:layout_marginTop="30dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Password"
        android:textColorHint="@android:color/darker_gray"
        android:inputType="textPassword"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:id="@+id/inputpwd"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daftar"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        android:shadowColor="@android:color/darker_gray"
        android:background="@android:color/black"
        android:textColorHighlight="@android:color/white"
        android:id="@+id/btnkirim"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Keluar"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        android:shadowColor="@android:color/holo_blue_light"
        android:background="@android:color/black"
        android:textColorHighlight="@android:color/white"
        android:id="@+id/btnexit"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"/>
</LinearLayout>
</ScrollView>
